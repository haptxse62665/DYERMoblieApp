<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp.Pages.NotificationPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#254F6E"
             NavigationPage.HasBackButton="False"
             >
    <ContentPage.Content>
        <ScrollView>

            <StackLayout>
                <!--<BoxView BackgroundColor="#FE3F3F"
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                            Property=Height,
                                                                            Factor=0.5}"
                     RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                                                                            Property=Width,
                                                                            Factor=1}"/>-->
                <StackLayout BackgroundColor="#FE3F3F" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Image Source="alert70.png" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" HeightRequest="150" WidthRequest="150" BackgroundColor="Transparent"/>
                </StackLayout>
                <StackLayout Padding="15,15,15,30">
                   
                    <!-- Start of Notification details -->
                    <StackLayout HorizontalOptions="CenterAndExpand">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Location:" TextColor="#00A9DE" FontSize="15"/>
                            <Label Text="{Binding Location}" TextColor="White" FontSize="15"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Type:" TextColor="#00A9DE" FontSize="15"/>
                            <Label Text="{Binding TitleNotification}" TextColor="White" FontSize="15"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Hazard level:" TextColor="#00A9DE" FontSize="15"/>
                            <Label Text="{Binding LevelEmergency}" TextColor="#F33B3B" FontSize="15"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Date:" TextColor="#00A9DE" FontSize="15"/>
                            <Label Text="{Binding DateCreated}" TextColor="White" FontSize="15"/>
                        </StackLayout>
                    </StackLayout>
                    <!-- End of Notification details -->

                    <!-- Start of Respond elements -->
                    <Label Text="Are you okay?" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="Large"/>
                    <Button Text="I am okay" TextColor="White" BackgroundColor="#64E45B" CornerRadius="15" HeightRequest="40" Clicked="Button_Ok"/>
                    <Button Text="I am not okay" TextColor="White" BackgroundColor="#FE3F3F" CornerRadius="15" HeightRequest="40" Clicked="Button_NotOk"/>
                    <!-- End of Respond elements -->
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>